{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common/*": ["libs/common/src/*"],
      "@app/sdk/*": ["libs/sdk/src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "libs/**/*",
    "kafka/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
